generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(cuid())
  name      String
  users     User[]
  products  Product[]
  cards     Card[]
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
}

model Card {
  id         String   @id @default(cuid())
  name       String
  limit      Float
  basePoints Float
  program    String
  companyId  String
  company    Company  @relation(fields: [companyId], references: [id])

  products   Product[]

  createdAt  DateTime @default(now())
}

model Product {
  id              String   @id @default(cuid())
  description     String
  supplier        String?
  purchaseDate    DateTime
  deliveryDate    DateTime?

  cardId          String?
  card            Card?    @relation(fields: [cardId], references: [id])

  purchaseValue   Float
  cashbackValue   Float
  pointsQuantity  Int
  creditedPoints  Int?
  pointsProgram   String
  mileValue       Float
  realCost        Float
  resaleValue     Float?
  profit          Float?
  roi             Float?
  stockQuantity   Int      @default(1)
  status          String?

  companyId       String
  company         Company  @relation(fields: [companyId], references: [id])

  createdAt       DateTime @default(now())
}
