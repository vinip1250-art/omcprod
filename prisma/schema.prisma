model Company {
  id        String   @id @default(cuid())
  name      String
  users     User[]
  products  Product[]
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
}

model Product {
  id              String   @id @default(cuid())
  description     String
  purchaseDate    DateTime
  purchaseValue   Float
  cashbackValue   Float
  pointsQuantity  Int
  creditedPoints  Int?
  pointsProgram   String
  realCost        Float
  resaleValue     Float?
  companyId       String
  company         Company  @relation(fields: [companyId], references: [id])
  createdAt       DateTime @default(now())
}
